<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4D4D8"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_above="@+id/calculation"
        android:layout_alignParentTop="true"
        android:background="#1E4450">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cur"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#918F19"
            android:fontFamily="@font/abeezee"
            android:text="Currency"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result"
        android:layout_marginBottom="36dp"
        android:background="#ECECEC"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="62dp" />


    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#EDEDED"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_Ac"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#DF6666"
                android:fontFamily="@font/abeezee"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_left_bracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#BED6E1"
                android:fontFamily="@font/abeezee"
                android:text="("
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_right_bracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#BED6E1"
                android:fontFamily="@font/abeezee"
                android:text=")"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_div"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#BED6E1"
                android:fontFamily="@font/abeezee"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D1D1CB"
                android:fontFamily="@font/abeezee"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D1D1CB"
                android:fontFamily="@font/abeezee"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D1D1CB"
                android:fontFamily="@font/abeezee"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_mult"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#BED6E1"
                android:fontFamily="@font/abeezee"
                android:text="*"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D1D1CB"
                android:fontFamily="@font/abeezee"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D1D1CB"
                android:fontFamily="@font/abeezee"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D1D1CB"
                android:fontFamily="@font/abeezee"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#BED6E1"
                android:fontFamily="@font/abeezee"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D1D1CB"
                android:fontFamily="@font/abeezee"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D1D1CB"
                android:fontFamily="@font/abeezee"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D1D1CB"
                android:fontFamily="@font/abeezee"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#BED6E1"
                android:fontFamily="@font/abeezee"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D1D1CB"
                android:fontFamily="@font/abeezee"
                android:text="."

                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D1D1CB"
                android:fontFamily="@font/abeezee"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_del"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#DF6666"
                android:fontFamily="@font/abeezee"
                android:text="del"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:cornerRadius="20dp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:backgroundTint="#BED6E1"
                android:fontFamily="@font/abeezee"
                android:text="="
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="20dp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>